<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
  <ScrollView
      android:id="@+id/SignUp_Scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:verticalScrollbarPosition="defaultPosition"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/SignUp_first_Emergency_Number"
            android:layout_width="372dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:drawableStart="@drawable/call"
            android:ems="10"
            android:hint="  First Emergency Number"
            android:inputType="phone"
            android:textColor="@color/Teal"
            android:textColorHint="@color/hint_Teal"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_National_ID" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="230dp"
            android:layout_height="217dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/add" />

        <EditText
            android:id="@+id/SignUp_email"
            android:layout_width="372dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:drawableStart="@drawable/email"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="example@"
            android:inputType="textEmailAddress"
            android:textColor="@color/Teal"
            android:textColorHint="@color/hint_Teal"
            app:layout_constraintBottom_toTopOf="@+id/SignUp_National_ID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_name_box" />

        <TextView
            android:id="@+id/SignUp_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="49dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="304dp"
            android:text="SignUp"
            android:textColor="@color/Teal"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.557"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <EditText
            android:id="@+id/SignUp_name_box"
            android:layout_width="372dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:drawableStart="@drawable/user_"
            android:ems="10"
            android:hint="  Name"
            android:inputType="textPersonName"
            android:textColorHint="@color/hint_Teal"
            app:layout_constraintBottom_toTopOf="@+id/SignUp_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_Title" />

        <EditText
            android:id="@+id/SignUp_National_ID"
            android:layout_width="372dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:drawableStart="@drawable/id_card"
            android:ems="10"
            android:hint="  National ID"
            android:inputType="number"
            android:textColor="@color/Teal"
            android:textColorHint="@color/hint_Teal"
            app:layout_constraintBottom_toTopOf="@+id/SignUp_first_Emergency_Number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_email" />

        <EditText
            android:id="@+id/SignUp_second_Emergency_Number"
            android:layout_width="372dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:drawableStart="@drawable/call"
            android:ems="10"
            android:hint="  Second Emergency Number"
            android:inputType="phone"
            android:textColor="@color/Teal"
            android:textColorHint="@color/hint_Teal"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="307dp"
            android:text="Optional"
            android:textColor="@color/Teal"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/SignUp_second_Emergency_Number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_first_Emergency_Number" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="298dp"
            android:text="Password"
            android:textColor="@color/Teal"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/SignUp_pass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_second_Emergency_Number" />

        <EditText
            android:id="@+id/SignUp_pass"
            android:layout_width="372dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:drawableStart="@drawable/padlock"
            android:ems="10"
            android:hint="***"
            android:inputType="textPassword"
            android:textColor="@color/Teal"
            android:textColorHint="#00446B6D"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="290dp"
            android:text="Confirm Password"
            android:textColor="@color/Teal"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/SignUp_Confirm_pass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_pass" />

        <EditText
            android:id="@+id/SignUp_Confirm_pass"
            android:layout_width="372dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:drawableStart="@drawable/padlock"
            android:ems="10"
            android:hint="***"
            android:inputType="textPassword"
            android:textColor="@color/Teal"
            android:textColorHint="#00446B6D"
            app:layout_constraintBottom_toTopOf="@+id/SignUp_Gender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/SignUp_Gender"
            android:layout_width="372dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:drawableStart="@drawable/toilet"
            android:ems="10"
            android:hint="  Gender"
            android:inputType="textPersonName"
            android:textColor="@color/Teal"
            android:textColorHint="@color/hint_Teal"
            app:layout_constraintBottom_toTopOf="@+id/SignUp_Date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_Confirm_pass" />

        <EditText
            android:id="@+id/SignUp_Date"
            android:layout_width="372dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:drawableStart="@drawable/calendar"
            android:ems="10"
            android:hint="  BirthDate"
            android:inputType="date"
            android:textColor="@color/Teal"
            android:textColorHint="@color/hint_Teal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_Gender" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="290dp"
            android:text="Health Details"
            android:textColor="@color/Teal"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.684"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_Date" />

        <EditText
            android:id="@+id/SignUp_Weight"
            android:layout_width="372dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:drawableStart="@drawable/weight_scale"
            android:ems="10"
            android:hint="  Weight"
            android:inputType="number"
            android:textColor="@color/Teal"
            android:textColorHint="@color/hint_Teal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/SignUp_Height"
            android:layout_width="372dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:drawableStart="@drawable/height"
            android:ems="10"
            android:hint="  Height"
            android:inputType="number"
            android:textColor="@color/Teal"
            android:textColorHint="@color/hint_Teal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_Weight" />

        <EditText
            android:id="@+id/SignUp_BloodType"
            android:layout_width="372dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:drawableStart="@drawable/blood_type"
            android:ems="10"
            android:hint="  Blood Type"
            android:inputType="textPersonName"
            android:textColor="@color/Teal"
            android:textColorHint="@color/hint_Teal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_Height" />
    </android.support.constraint.ConstraintLayout>

   </ScrollView>
</LinearLayout>